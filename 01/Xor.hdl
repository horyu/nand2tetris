/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    //// Replace this comment with your code.
    Not(in= a, out= ar);
    Not(in= b, out= br);
    And(a=a,b=br,out=l);
    And(a=ar,b=b,out=r);
    Or(a=l,b=r,out=out);
}